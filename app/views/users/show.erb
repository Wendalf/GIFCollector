<form action="/gifs/new" method="post" enctype="multipart/form-data">
  <label>Upload GIF:</label>
  <input type="file" name="gif">
  <br>
  <label for="description">Description: </label>
  <input type="text" id="description" name="description">
  <input type="submit" value="submit">
</form>
<br>
<% @gifs.each do |gif|%>
<a href="/gifs/<%= gif.slug %>"><img src="<%= gif.user_id %>/<%= gif.filename %>" alt="<%= gif.slug %>"></a>
<!-- NEED to add tags too -->
<% end %>