<% if flash.has?(:message) %>
<div class="alert alert-dismissible alert-success animated fadeInDown">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <p><%= flash[:message] %></p>
</div>
<% end %>


<div class="row">
	<div class="col-sm-3"></div>
	<div class="col-sm-6">
		<img src="../users/<%=  @gif.user_id %>/<%= @gif.filename %>">
		<p><%= @gif.description %></p>
		<% @gif.tags.each do |tag| %>
		<a href="/tags/<%= tag.slug %>">#<%= tag.name %></a>
		<% end %>
		<br>
		<br>
		<a href="/gifs/<%= @gif.slug %>/edit" class="btn btn-default" style="float: left;">Edit Gif Info</a>
		<form action="/gifs/<%= @gif.slug %>/delete" method="post" id="deletformbutton" style="text-align: right;">
				<input type="hidden" id="hidden" name="_method" value="delete">
				<button type="submit" class="btn btn-danger">Delete Gif</button>
		</form>
	</div>
	<div class="col-sm-3"></div>
</div>
