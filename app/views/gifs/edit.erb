<img src="<%= @gif.filename %>">
<form action="/gifs/<%= @gif.slug %>/edit" method="post">
	<input type="text" id="description" name="description" value="<%= @gif.description %>">
	<input type="submit" value="Update Description">
</form>
<form action="/gifs/<%= @gif.slug %>/delete">
	<input type="hidden" id="hidden" name="_method" value="delete">
	<input type="submit" value="Delete Gif">
</form>